{
  "name": "honey-chat",
  "version": "0.0.1",
  "author": "DmitryScaletta",
  "description": "Alternative twitch-like chat with history and some enhancements",
  "license": "MIT",
  "private": true,
  "homepage": "https://honeykingdom.github.io/chat",
  "dependencies": {
    "camel-case": "^3.0.0",
    "date-fns": "^2.7.0",
    "emojilib": "^2.4.0",
    "gh-pages": "^2.1.1",
    "jsonwebtoken": "^8.5.1",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.7.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-scrollbars-custom": "^4.0.21",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^5.0.0-rc.2",
    "tekko": "^2.4.0",
    "twemoji-parser": "^12.1.1",
    "twitch-simple-irc": "github:honeykingdom/twitch-simple-irc",
    "url-regex": "^5.0.0",
    "use-onclickoutside": "^0.3.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.11",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/uuid": "^3.4.6",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "prettier": "^1.19.1",
    "source-map-explorer": "^2.1.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier",
      "react-hooks"
    ],
    "globals": {
      "fetch": true,
      "window": true,
      "document": true,
      "localStorage": true,
      "navigator": true,
      "WebSocket": true,
      "AbortController": true
    },
    "env": {
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    },
    "parser": "babel-eslint"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
